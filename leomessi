    <!-- Shop Modal -->
    <div id="shopModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(12, 26, 58, 0.95); z-index: 2000; justify-content: center; align-items: center; padding: 20px;">
